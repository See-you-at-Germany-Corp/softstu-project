<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Double Lab</title>

    @* Google Fonts Setup. *@
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Itim&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/login/login_style.css">
    <link rel="stylesheet" href="~/css/home/home_style.css">
    <link rel="stylesheet" href="~/css/admin_index_style.css">
    <link rel="stylesheet" href="~/css/navbar_style.css">

    <script src="~/js/navbar.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>

<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="nav-container">
            <div class="nav-brand-box">
                <div class="nav-icon"></div>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Double Labs</a>
            </div>

            <div class="nav-menu">
                <div class="nav-item">
                    <a class="img-link" asp-controller="Home" asp-action="Profile"><img
                            src="https://www.flaticon.com/svg/vstatic/svg/2922/2922510.svg?token=exp=1618485501~hmac=7734c0bf434cc27dceba121cf0c4ebcb"
                            alt="profile"></a>
                    <a class="text-link" asp-controller="Home" asp-action="Profile">Profile</a>
                </div>

                <div class="nav-item-text">
                    <a asp-controller="Home" asp-action="Index">Logout</a>
                </div>
                <div class="nav-item nav-expand" onclick="showNavbar()">
                    <img src="https://www.flaticon.com/svg/vstatic/svg/3388/3388830.svg?token=exp=1618483047~hmac=a854318b49214435fd4519231678a928"
                        alt="hambergur-menu">
                </div>
            </div>
        </div>
    </nav>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Double Lab - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    @RenderSection("Scripts", required: false)
</body>

</html>
